<Page x:Class="frontend.Pages.LogsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:frontend.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogsPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Pages/background.png"/>
        </Grid.Background>
        <Label x:Name="judulList" Content="List Log" HorizontalAlignment="Left" Margin="98,47,0,0" VerticalAlignment="Top" Height="66" Width="153" FontSize="36" Foreground="White" FontFamily="Comic Sans MS"/>
        <Button Content="Add Log" HorizontalAlignment="Left" Margin="456,58,0,0" VerticalAlignment="Top" Height="34" Width="110" Background="#FF1DF803" Click="NavigateToAddLog" BorderBrush="#FF1DF803">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBlock Padding="10" x:Name="LogsMap" HorizontalAlignment="Left" Height="223" Margin="98,135,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="648" Background="White" Opacity="0.8"/>

    </Grid>
</Page>
